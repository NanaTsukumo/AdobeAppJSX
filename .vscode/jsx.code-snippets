      "    var objects = doc.selection;",
      "    var processedCount = 0;",
      "",
      "    // プログレスバー作成",
      "    var progress = createProgressBar(objects.length, \"${2:オブジェクト処理中}\");",
      "",
      "    try {",
      "        for (var i = 0; i < objects.length; i++) {",
      "            // キャンセルチェック",
      "            if (progress.cancelled()) {",
      "                break;",
      "            }",
      "",
      "            var obj = objects[i];",
      "            ",
      "            // オブジェクト処理",
      "            ${0:// TODO: オブジェクト処理を実装}",
      "",
      "            processedCount++;",
      "            progress.update(i + 1, processedCount + \"/\" + objects.length + \" 処理完了\");",
      "        }",
      "",
      "        alert(processedCount + \"個のオブジェクトを処理しました。\");",
      "",
      "    } finally {",
      "        progress.close();",
      "    }",
      "}"
    ],
    "description": "オブジェクト処理テンプレート（プログレスバー付き）"
