  "Adobe JSX Progress Bar": {
    "prefix": "jsx-progress",
    "body": [
      "/**",
      " * プログレスバーテンプレート",
      " * 📚 参照: References/Quick-Reference-JSX-Snippets.md (プログレスバー)",
      " */",
      "function createProgressBar(maxValue, title) {",
      "    title = title || \"処理中...\";",
      "    ",
      "    var progressWin = new Window(\"palette\", title);",
      "    progressWin.orientation = \"column\";",
      "    progressWin.alignChildren = \"fill\";",
      "    progressWin.spacing = 10;",
      "    progressWin.margins = 16;",
      "",
      "    var progressBar = progressWin.add(\"progressbar\", undefined, 0, maxValue);",
      "    progressBar.preferredSize.width = 300;",
      "",
      "    var statusText = progressWin.add(\"statictext\", undefined, \"準備中...\");",
      "    statusText.preferredSize.width = 300;",
      "",
      "    var cancelButton = progressWin.add(\"button\", undefined, \"キャンセル\");",
      "    var cancelled = false;",
      "",
      "    cancelButton.onClick = function() {",
      "        cancelled = true;",
      "        progressWin.close();",
      "    };",
      "",
      "    progressWin.show();",
      "",
      "    return {",
      "        window: progressWin,",
      "        bar: progressBar,",
      "        text: statusText,",
      "        cancelled: function() { return cancelled; },",
      "        update: function(value, message) {",
      "            if (!cancelled) {",
      "                this.bar.value = value;",
      "                this.text.text = message || \"\";",
      "                app.redraw();",
      "            }",
      "            return !cancelled;",
      "        },",
      "        close: function() {",
      "            this.window.close();",
      "        }",
      "    };",
      "}"
    ],
    "description": "プログレスバー付きバッチ処理テンプレート"
  },

